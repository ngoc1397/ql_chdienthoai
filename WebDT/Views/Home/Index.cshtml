
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Models.Framework
@model List<SanPham>
<div class="row" style="padding:0rem;margin-bottom:0.5rem;border-bottom:1px solid #e0e0e0">
    <div class="col-md-8">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Assets/Image/qc1.png" class="d-block w-100 h-100" alt="Ảnh 1">
                </div>
                <div class="carousel-item">
                    <img src="~/Assets/Image/qc2.png" class="d-block w-100 h-100" alt="Ảnh 2">
                </div>
                <div class="carousel-item">
                    <img src="~/Assets/Image/qc3.png" class="d-block w-100 h-100" alt="Ảnh 3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-4" style="padding:0rem">
        <table>
            <tr>
                <td>
                    <img src="~/Assets/Image/qc5.png" class="w-100" />
                </td>
            </tr>
            <tr>
                <td>
                    <img src="~/Assets/Image/qc6.png" class="w-100" />
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row" style="border:1px solid red;margin-top:1rem;padding:0px">
    <div class="col-md-12" style="height:3rem;background-color:#cc0f0f;text-align:center;margin-top:0.1rem;margin-bottom:0.8rem;border-radius:0.3rem;padding:5px">
        <span style="font-size:1.6rem;color:white">SẢN PHẨM HOT - NHIỀU NGƯỜI MUA</span>
    </div>
    @foreach(var item in Model)
    {
        <div class="card" style="width:224px;height:330px;font-size:1rem;margin-right:3px;margin-bottom:5px">
            <img src="~/Assets/HinhSP/@item.anhSanpham" class="card-img-top" alt="Hình" style="width:160px;height:160px;margin:10px auto">
            <div class="card-body">
                <h6 class="card-title">@item.tenSanpham</h6>
                <h6 class="card-title" style="color:orangered">@string.Format("{0:0,00} Đ", @item.giaSanpham)</h6>
                <a href="@Url.Action("ThemGioHang","GioHang",new {@idSanpham=@item.idSanpham,@URL = Request.Url.ToString()})" class="btn btn-danger"style="font-size:1rem">Mua</a>
                <a href="@Url.Action("XemChiTiet","SanPham",new {@idSanpham=@item.idSanpham})">
                    <input type="submit" class="btn btn-warning" value="Chi tiết" style="color:white;font-weight:bold"/>
                </a>
            </div>
        </div>
    }
</div>
<div class="row" style="margin-top:10px">
    <div class="col-md-4" style="padding:0px 5px">
        <img src="~/Assets/Image/banner1.png" style="width:100%;border-radius:5px"/>
    </div>
    <div class="col-md-4" style="padding:0px 5px">
        <img src="~/Assets/Image/banner2.png" style="width:100%;border-radius:5px" />
    </div>
    <div class="col-md-4" style="padding:0px 5px">
        <img src="~/Assets/Image/banner3.png" style="width:100%;border-radius:5px"/>
    </div>
</div>

