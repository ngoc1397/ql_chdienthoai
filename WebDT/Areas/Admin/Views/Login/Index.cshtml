
@{
    Layout = null;
}
@model WebDT.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng nhập hệ thống</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <style>
        .login-form {
            width: 340px;
            margin: 50px auto;
            font-size: 15px;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body style="background-image:url(/Assets/Image/2552637.jpg); background-size:cover">
    <div class="login-form" style="margin-top:170px;border: 1px solid #de0404;border-bottom:none;opacity:0.9;">
        @using (Html.BeginForm(new { @method = "post" }))
        {
            <div class="form-group" style="text-align:center">
                <h3 style="color:darkblue">Đăng nhập</h3>
            </div>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
            <div class="form-group">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập", @required = "required" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.PassWord, new { @class = "form-control", @placeholder = "Mật khẩu", @required = "required" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger btn-block">Đăng nhập</button>
            </div>
            <div class="clearfix">
                <label class="float-left form-check-label">
                    @Html.CheckBoxFor(model => model.RememberMe, new { @class = "" })
                    Remember me
                </label>
                <a href="#" class="float-right">Quên mật khẩu?</a>
            </div>
        }
    </div>
</body>
</html>